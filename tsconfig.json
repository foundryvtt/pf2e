{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node16",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "noEmit": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "dist",
        "allowUnusedLabels": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "paths": {
            "@actor": ["src/module/actor/index.js"],
            "@actor/*": ["src/module/actor/*"],
            "@item": ["src/module/item/index.js"],
            "@item/*": ["src/module/item/*"],
            "@scene": ["src/module/scene/index.js"],
            "@scene/*": ["src/module/scene/*"],
            "@system/*": ["src/module/system/*"],
            "@module/*": ["src/module/*"],
            "@scripts/*": ["src/scripts/*"],
            "@util": ["src/util/index.js"],
            "@util/*": ["src/util/*"]
        },
        "types": [
            "jquery",
            "tooltipster",
            "gsap",
            "jest",
            "node",
            "handlebars"
        ],
        "typeRoots": [
            "node_modules/@types",
            "node_modules/handlebars",
            "types/foundry"
        ]
    },
    "watchOptions": {
        "excludeDirectories": ["packs/data/", "static/packs/"]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "files": true
    }
}
