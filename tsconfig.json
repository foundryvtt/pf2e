{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2023",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Collection",
            "ESNext.Iterator",
            "ESNext.Object",
            "ESNext.Promise",
            "DOM",
            "DOM.Iterable",
            "DOM.AsyncIterable"
        ],
        "noEmit": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowImportingTsExtensions": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "isolatedModules": true,
        "outDir": "dist",
        "allowUnusedLabels": false,
        "removeComments": false,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "noErrorTruncation": true,
        "paths": {
            "@actor": [
                "./src/module/actor/index.ts"
            ],
            "@actor/*": [
                "./src/module/actor/*"
            ],
            "@item": [
                "./src/module/item/index.ts"
            ],
            "@item/*": [
                "./src/module/item/*"
            ],
            "@scene": [
                "./src/module/scene/index.ts"
            ],
            "@scene/*": [
                "./src/module/scene/*"
            ],
            "@system/*": [
                "./src/module/system/*"
            ],
            "@module/*": [
                "./src/module/*"
            ],
            "@scripts/*": [
                "./src/scripts/*"
            ],
            "@common/*": [
                "./types/foundry/common/*"
            ],
            "@client/*": [
                "./types/foundry/client/*"
            ],
            "@util": [
                "./src/util/index.ts"
            ],
            "@util/*": [
                "./src/util/*"
            ]
        },
        "types": [
            "jest",
            "jquery",
            "node",
            "showdown",
            "tooltipster"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./build/**/*",
        "./src/**/*",
        "./tests/**/*.ts",
        "./types/foundry/global-external.d.mts",
        "./vite.config.ts"
    ],
    "watchOptions": {
        "fallbackPolling": "dynamicpriority",
        "excludeDirectories": [
            "dist",
            "packs",
            "static"
        ]
    }
}
