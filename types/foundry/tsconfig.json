{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "skipLibCheck": false,
        "noImplicitOverride": true,
        "noEmit": true,
        "esModuleInterop": true,
        "paths": {
            "@common/*": [
                "./common/*"
            ],
            "@client/*": [
                "./client/*"
            ]
        }
    },
    "include": [
        "common/**/*",
        "client/**/*.d.mts",
        "util.d.mts",
        "client/canvas/groups/canvas-group-mixin.mts"
    ]
}
