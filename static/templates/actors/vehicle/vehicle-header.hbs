<header class="char-header">
    <div class="char-details">
        <h1 class="char-name">
            <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize "PF2E.CharacterNamePlaceholder"}}" />
        </h1>
        <div class="tags">
            <select class="rarity rarity-select {{data.traits.rarity}}" name="system.traits.rarity" data-dtype="String">
                {{selectOptions actorRarities selected=data.traits.rarity localize=true}}
            </select>

            <select class="size size-select" name="system.traits.size.value" data-dtype="String">
                {{selectOptions actorSizes selected=data.traits.size.value localize=true}}
            </select>
        </div>
    </div>
    <div class="char-level">
        <div class="level">
            <label>{{localize "PF2E.vehicle.VehicleLevelLabel"}}</label>
            <input name="system.details.level.value" type="number" value="{{data.details.level.value}}" placeholder="1" size="2" />
        </div>
    </div>
</header>
