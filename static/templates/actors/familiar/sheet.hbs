<form class="{{cssClass}}" autocomplete="off" spellcheck="false" data-tooltip-class="pf2e">
    {{!-- HEADER --}}
    <header>
        <div class="image-container">
            <img class="actor-image" src="{{actor.img}}" data-edit="img" />
            <a class="hover-icon" data-action="show-image" data-tooltip="SIDEBAR.CharArt"><i class="fa-solid fa-image fa-fw"></i></a>
        </div>

        <div class="header-content">
            <div class="charname">
                <input class=" charname-value" name="name" type="text" value="{{actor.name}}"
                    placeholder="{{localize "PF2E.NPC.Familiar"}}" spellcheck="false" />
                <label class="familiar-title">{{localize "TYPES.Actor.familiar"}}</label>
                {{#if data.master.id}}
                    <label class="familiar-title"> {{data.details.level.value}}</label>
                {{/if}}
            </div>
            <div class="sub-header">
                <div class="traits">
                    {{#each traits as |trait|}}
                        <span data-trait="{{trait.value}}" data-tooltip="{{trait.description}}">{{localize trait.label}}</span>
                    {{/each}}
                    <span>{{localize size}}</span>
                </div>
                <div>
                    <label for="{{document.uuid}}-master"><strong>{{localize "PF2E.Familiar.Master"}}</strong></label>
                    <select id="{{document.uuid}}-master" name="system.master.id">
                        {{#select master.id}}
                            <option value="">{{localize "PF2E.Familiar.SelectMaster"}}</option>
                            {{#if limitedSheet}}
                                {{#if master}}<option value="{{master.id}}" selected>{{master.name}}</option>{{/if}}
                            {{else}}
                                {{#each masters as |eligible idx|}}
                                    <option value="{{eligible.id}}">{{eligible.name}}</option>
                                {{/each}}
                            {{/if}}
                        {{/select}}
                    </select>
                </div>
            </div>
            <section class="details-section">
                {{#unless limitedSheet}}
                    {{> "systems/pf2e/templates/actors/familiar/partials/header-details.hbs" }}
                {{/unless}}
            </section>
        </div>
    </header>
    <hr>
    <div class="main-section">
        <div class="skills-sidebar {{#if limitedSheet}}skills-sidebar-placeholder{{/if}}">
            <!-- SKILLS -->
            {{#unless limitedSheet}}
                {{> "systems/pf2e/templates/actors/familiar/partials/skills.hbs" }}
            {{/unless}}
        </div>
        <div class="main-container">
            {{#unless limitedSheet}}
                {{> "systems/pf2e/templates/actors/familiar/partials/details.hbs" }}
            {{/unless}}

            {{!-- ABILITIES --}}
            {{#unless limitedSheet}}
                {{> "systems/pf2e/templates/actors/familiar/partials/abilities.hbs" }}
            {{/unless}}

            {{!-- CONDITIONS --}}
            {{#if document.itemTypes.condition}}
                <div class="section-container">
                    <div class="section-header">
                        <h4>{{localize "PF2E.ConditionsLabel"}}</h4>
                    </div>
                    <div class="section-body">
                        <ol class="effects-list item-list">
                            {{> "systems/pf2e/templates/actors/partials/effects.hbs" effects=document.conditions.active}}
                        </ol>
                    </div>
                </div>
            {{/if}}
            {{!-- EFFECTS --}}
            {{#if document.itemTypes.effect}}
                <div class="section-container">
                    <div class="section-header">
                        <h4>{{localize "PF2E.EffectsLabel"}}</h4>
                    </div>
                    <div class="section-body">
                        <ol class="effects-list item-list">
                            {{> "systems/pf2e/templates/actors/partials/effects.hbs" effects=document.itemTypes.effect}}
                        </ol>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</form>
