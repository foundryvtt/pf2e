<form class="army-sheet{{#if data.details.editLock}} editLock{{/if}}" autocomplete="off">

    {{!-- ============== --}}
    {{!--    SIDEBAR     --}}
    {{!-- ============== --}}
    <aside class="army-sidebar">
        {{!-- Portrait --}}
        <section class="image-container">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" data-tooltip="{{actor.name}}"/>
            <a class="hover-icon" data-feat="show-image"><i class="fas fa-image fa-fw"></i></a>
        </section>

        {{!-- AC --}}
        <section class="sidebar-section">
            <div class="section-head">
                <i class="fa-solid fa-fw fa-shield-alt"></i>
                <h4>{{localize "PF2E.ArmorClassLabel"}}</h4>
                <input class="stats" type="number" data-property="system.attributes.ac.value" value="{{add data.attributes.ac.value data.attributes.ac.potency}}" data-dtype="Number"/>
            </div>
            <div class="buttons">
                <label for="system.attributes.ac.potency"><span class="plus">+</span>{{data.attributes.ac.potency}}</label>
                <button data-tooltip="{{data.attributes.ac.potency}}" class="armor pips" type="button">
                    {{#times 3}}
                        <i class="{{#if (gt @root.data.attributes.ac.potency this)}}far fa-shield filled{{else}}fal fa-shield empty{{/if}}"></i>
                    {{/times}}
                </button>
                <button data-tooltip="Magic Armor Info" class="info" data-info="armor" type="button">
                    <i class="far fa-comment-alt"></i>
                </button>
            </div>
            <input type="text" data-dtype="String" data-property="system.attributes.ac.details" value="{{data.attributes.ac.details}}" class="armor-details" placeholder="{{localize "PF2E.NPC.ArmorExtraInfoLabelPlaceholder"}}" />
        </section>

        {{!-- HP --}}
        <section class="sidebar-section">
            <div class="section-head">
                <i class="fa-solid fa-fw fa-heart"></i>
                <h4>{{localize "PF2E.HitPointsShortLabel"}}</h4>
                    <input type="number" data-property="system.attributes.hp.value" value="{{data.attributes.hp.value}}" data-dtype="Number"/>
                    <span class="slash">/</span>
                    <input type="number" data-property="system.attributes.hp.max" value="{{data.attributes.hp.max}}" data-dtype="Number"/>
            </div>
            <div>
                <label {{#if (lt data.attributes.hp.value data.attributes.hp.routThreshold)}}class="routed" data-tooltip="{{localize "PF2E.Warfare.ArmySheet.routThresholdExceeded"}}"{{/if}}>{{localize "PF2E.Warfare.Army.routThreshold"}}</label>
                <input type="number" data-property="system.attributes.hp.routThreshold" value="{{data.attributes.hp.routThreshold}}" data-dtype="Number"/>
            </div>
            <div class="buttons">
                {{#if (eq @root.data.attributes.hp.potions 0)}}
                    <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Potions.drinkErrorNoPotions"}}" class="disabled" type="button"><i class="fal fa-champagne-glasses"></i>
                {{else if (eq @root.document.hitPoints.value @root.document.hitPoints.max)}}
                    <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Potions.drinkErrorFullHP"}}" class="disabled" type="button"><i class="fal fa-champagne-glasses"></i>
                {{else}}
                    <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Potions.drinkTooltip"}}" class="usepotion" type="button"><i class="fas fa-champagne-glasses"></i>
                {{/if}}
                </button>
                <button data-tooltip="{{data.attributes.hp.potions}} {{localize "PF2E.Warfare.ArmySheet.Potions.label"}}" class="potion pips" type="button">
                    {{#times 3}}
                        <i class="{{#if (gt @root.data.attributes.hp.potions this)}}far fa-flask-round-potion filled{{else}}fal fa-flask-round-potion empty{{/if}}"></i>
                    {{/times}}
                </button>
                <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.InfoButton.tooltipPotion"}}" class="info" data-info="potions" type="button">
                    <i class="far fa-comment-alt"></i>
                </button>
            </div>
            <input type="text" data-property="system.attributes.hp.details" value="{{data.attributes.hp.details}}" data-tooltip="{{data.attributes.hp.details}}" data-dtype="String" placeholder="{{localize "PF2E.NPC.HPExtraInfoLabelPlaceholder"}}"/>
        </section>

        {{!-- Attributes --}}
        <section class="sidebar-section">
            <div class="section-head">
                <i class="fa-solid fa-fw fa-eye"></i>
                <h4>{{localize "PF2E.Warfare.ArmySheet.attributesHeader"}}</h4>
            </div>
            <div>
                <label for="system.attributes.scouting.bonus">{{localize "PF2E.Warfare.Army.scouting"}}</label>
                <section class="roll">
                    <a data-attribute="scouting" class="rollable roll-icon"><i class="fas fa-dice-d20"></i></a>
                    <span class="plus">+</span>
                    <input class="stats roll-bonus" type="number" data-property="system.attributes.scouting.bonus" value="{{data.attributes.scouting.bonus}}" data-dtype="Number"/>
                </section>
            </div>
            <div>
                <label for="system.attributes.morale.bonus">{{localize "PF2E.Warfare.Army.morale"}}</label>
                <section class="roll">
                    <a data-attribute="morale" class="rollable roll-icon"><i class="fas fa-dice-d20"></i></a>
                    <span class="plus">+</span>
                    <input class="stats roll-bonus" type="number" data-property="system.attributes.morale.bonus" value="{{data.attributes.morale.bonus}}" data-dtype="Number"/>
                </section>
            </div>
            <div>
                <label for="system.attributes.maneuver.bonus">{{localize "PF2E.Warfare.Army.maneuver"}}</label>
                <section class="roll">
                    <a data-attribute="maneuver" class="rollable roll-icon"><i class="fas fa-dice-d20"></i></a>
                    <span class="plus">+</span>
                    <input class="stats roll-bonus" type="number" data-property="system.attributes.maneuver.bonus" value="{{data.attributes.maneuver.bonus}}" data-dtype="Number"/>
                </section>
            </div>
            <div>
                <label for="data.attributes.consumption">{{localize "PF2E.Warfare.Army.consumption"}}</label>
                <input class="stats" type="number" data-property="system.attributes.consumption" value="{{data.attributes.consumption}}" data-dtype="Number"/>
            </div>
            <div>
                <label for="data.attributes.standardDC">{{localize "PF2E.Warfare.Army.standardDC"}}</label>
                <input class="stats" type="number" data-property="system.attributes.standardDC" value="{{data.attributes.standardDC}}" data-dtype="Number"/>
            </div>
            <div>
                <label for="data.attributes.maxTactics">{{localize "PF2E.Warfare.Army.maxTactics"}}</label>
                <input class="stats" type="number" data-property="system.attributes.maxTactics" value="{{data.attributes.maxTactics}}" data-dtype="Number"/>
            </div>
        </section>
    </aside>

    <section class="army-body">

        {{!-- ============== --}}
        {{!--     Header     --}}
        {{!-- ============== --}}
        <header class="army-sheet-header">
            {{!-- NAME --}}
            <div class="name flex">
                <input class="name" name="name" type="text" value="{{actor.name}}" placeholder="{{localize "PF2E.Warfare.ArmySheet.newArmyName"}}" spellcheck="false" />
                <label class="level-label stats">{{localize "TYPES.Actor.army"}} <input class="level stats" name="system.details.level.value" type="number" value="{{data.details.level.value}}"/></label>
            </div>
            {{!-- TRAITS --}}
            <div class="flex">
                <div>
                    <select class="rarity-select trait {{data.traits.rarity}}" name="system.traits.rarity">
                        {{#select data.traits.rarity}}
                            <option value="common">{{localize "PF2E.TraitCommon"}}</option>
                            <option value="uncommon">{{localize "PF2E.TraitUncommon"}}</option>
                            <option value="rare">{{localize "PF2E.TraitRare"}}</option>
                            <option value="unique">{{localize "PF2E.TraitUnique"}}</option>
                        {{/select}}
                    </select>
                    <select class="alignment-select trait {{data.details.alignment}}" name="system.details.alignment">
                        {{#select data.details.alignment}}
                            <option>LG</option>
                            <option>NG</option>
                            <option>CG</option>
                            <option>LN</option>
                            <option>N</option>
                            <option>CN</option>
                            <option>LE</option>
                            <option>NE</option>
                            <option>CE</option>
                        {{/select}}
                    </select>
                    <select name="system.traits.type" class="armytype-select trait">
                        {{#select data.traits.type}}
                            <option data-tooltip="{{localize "PF2E.Warfare.Traits.infantryDescription"}}" value="infantry">{{localize "PF2E.Warfare.Traits.infantry"}}</option>
                            <option data-tooltip="{{localize "PF2E.Warfare.Traits.cavalryDescription"}}" value="cavalry">{{localize "PF2E.Warfare.Traits.cavalry"}}</option>
                            <option data-tooltip="{{localize "PF2E.Warfare.Traits.skirmisherDescription"}}" value="skirmisher">{{localize "PF2E.Warfare.Traits.skirmisher"}}</option>
                            <option data-tooltip="{{localize "PF2E.Warfare.Traits.siegeDescription"}}" value="siege">"{{localize "PF2E.Warfare.Traits.siege"}}"</option>
                        {{/select}}
                    </select>
                </div>
                <div class="sheet-settings">
                    <button class="unlock editLock" type="button">
                        {{#if data.details.editLock}}
                        <i data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.unlockSheet"}}" class="far fa-lock"></i>
                        {{else}}
                        <i data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.lockSheet"}}" class="far fa-lock-open"></i>
                        {{/if}}
                    </button>
                    <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.StatGenerator.title"}}" class="generate-stats popup" type="button">
                        <i class="far fa-cog"></i>
                    </button>
                    <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.StatGenerator.levelUpTitle"}}" class="generate-stats level-up" type="button">
                        <i class="far fa-angle-double-up"></i>
                    </button>
                </div>
            </div>
            {{!-- BLURB --}}
            <input name="system.details.blurb" type="text" value="{{data.details.blurb}}" />
        </header>

        {{!-- ============== --}}
        {{!--      Body      --}}
        {{!-- ============== --}}
        <section class="sheet-body">

                {{!-- ============== --}}
                {{!--     Strikes    --}}
                {{!-- ============== --}}
                <section class="weapons">
                    <fieldset class="weapons">
                    <legend><i class="fa-light fa-swords"></i>&nbsp;{{localize "PF2E.Warfare.ArmySheet.strikesHeader"}}</legend>
                        <div class="strike {{#if data.weapons.melee.unlocked}}unlocked{{else}}locked{{/if}}">
                            <label class="roll"><a data-weapon="melee" data-attack="0" class="rollable melee"><i data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Strikes.melee"}} ( +{{data.weapons.bonus}} {{localize "PF2E.Warfare.ArmySheet.Strikes.proficiency"}}, +{{data.weapons.melee.potency}} {{localize "PF2E.Warfare.ArmySheet.Strikes.potency"}} )" class="fas fa-dice-d20"></i> + {{add data.weapons.bonus data.weapons.melee.potency}}</a></label>
                            <label class="roll"><a data-weapon="melee" data-attack="1" class="rollable melee">-5</a></label>
                            <label class="roll"><a data-weapon="melee" data-attack="2" class="rollable melee">-10</a></label>
                            <input class="melee name" type="text" data-property="system.weapons.melee.name" value="{{data.weapons.melee.name}}" placeholder="{{localize "PF2E.Warfare.Strikes.melee"}}" />
                            {{#if data.weapons.melee.unlocked}}
                                <button class="melee unlock" type="button"><i class="fas fa-lock-open empty" data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.lockWeapon"}}"></i></button>
                            {{else}}
                                <button class="melee unlock" type="button"><i class="fas fa-lock filled" data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.unlockWeapon"}}"></i></button>
                            {{/if}}
                        </div>
                        <div class="strike {{#if data.weapons.ranged.unlocked}}unlocked{{else}}locked{{/if}}">
                            <label class="roll"><a data-weapon="ranged" data-attack="0" class="rollable ranged"><i data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Strikes.ranged"}} ( +{{data.weapons.bonus}} {{localize "PF2E.Warfare.ArmySheet.Strikes.proficiency"}}, +{{data.weapons.ranged.potency}} {{localize "PF2E.Warfare.ArmySheet.Strikes.potency"}} )" class="fas fa-dice-d20"></i> + {{add data.weapons.bonus data.weapons.ranged.potency}}</a></label>
                            <label class="roll"><a data-weapon="ranged" data-attack="1" class="rollable ranged">-5</a></label>
                            <label class="roll"><a data-weapon="ranged" data-attack="2" class="rollable ranged">-10</a></label>
                            <input class="ranged name" type="text" data-property="system.weapons.ranged.name" value="{{data.weapons.ranged.name}}" placeholder="{{localize "PF2E.Actor.Army.Strikeranged"}}" />
                            <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.Strikes.ammunitionLabel"}} {{data.weapons.ammunition.value}}" class="ammunition pips" type="button">
                                {{#times data.weapons.ammunition.max}}
                                <i class="{{#if (gt @root.data.weapons.ammunition.value this)}}far fa-dagger filled{{else}}fal fa-dagger empty{{/if}}"></i>
                                {{/times}}
                            </button>
                            <button data-tooltip="Restore Ammunition" class="ammunition restore"><i class="{{#if (eq @root.data.weapons.ammunition.value 5)}}fal fa-refresh empty{{else}}far fa-refresh filled{{/if}}"></i></button>
                            {{#if data.weapons.ranged.unlocked}}
                                <button class="ranged unlock" type="button"><i class="fas fa-lock-open empty" data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.lockWeapon"}}"></i></button>
                            {{else}}
                                <button class="ranged unlock" type="button"><i class="fas fa-lock filled" data-tooltip="{{localize "PF2E.Warfare.ArmySheet.ToggleLock.unlockWeapon"}}"></i></button>
                            {{/if}}
                        </div>
                    </fieldset>

                    <fieldset class="upgrades">
                    <legend><i class="fa-light fa-sparkle"></i>&nbsp;{{localize "PF2E.Warfare.ArmySheet.upgradesHeader"}}</legend>
                        <div class="strike rank {{#if data.weapons.melee.unlocked}}unlocked{{else}}locked{{/if}}">
                            <button data-tooltip="{{localize "PF2E.Warfare.Gear.Weapons.name"}}" class="melee pips" type="button">
                                {{#times 3}}
                                <i class="{{#if (gt @root.data.weapons.melee.potency this)}}far fa-sword filled{{else}}fal fa-sword empty{{/if}}"></i>
                                {{/times}}
                            </button>
                            <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.InfoButton.tooltipMelee"}}" class="info" data-info="melee" type="button">
                                <i class="far fa-comment-alt"></i>
                            </button>
                        </div>
                        <div class="strike rank {{#if data.weapons.ranged.unlocked}}unlocked{{else}}locked{{/if}}">
                            <button data-tooltip="{{localize "PF2E.Warfare.Gear.Weapons.name"}}" class="ranged pips" type="button">
                                {{#times 3}}
                                <i class="{{#if (gt @root.data.weapons.ranged.potency this)}}far fa-bow-arrow filled{{else}}fal fa-bow-arrow empty{{/if}}"></i>
                                {{/times}}
                            </button>
                            <button data-tooltip="{{localize "PF2E.Warfare.ArmySheet.InfoButton.tooltipRanged"}}" class="info" data-info="ranged" type="button">
                                <i class="far fa-comment-alt"></i>
                            </button>
                        </div>
                    </fieldset>
                </section>

                {{!-- ============== --}}
                {{!--     Actions    --}}
                {{!-- ============== --}}
                {{#if document.itemTypes.action}}
                <fieldset>
                    <legend class="compendium-items"><i class="fa-light fa-diamond"></i>&nbsp;Actions</legend>
                        <ol class="item-list">
                            {{#each document.itemTypes.action as |action|}}
                                <li class="item" data-item-id="{{action._id}}">
                                    <a class="item-icon item-chat">
                                        <i class="imgicon fa-solid fa-fw fa-comment-alt"></i>
                                        <img class="item-icon" src="{{action.img}}" alt="{{action.name}}" />
                                    </a>
                                    <label class="item-name">
                                        <h4>{{action.name}}</h4>
                                    </label>
                                    {{#if action.system.frequency}}
                                        <section class="item-frequency">
                                            <input type="number" value="{{action.system.frequency.value}}" data-item-id="{{action._id}}" data-item-property="system.frequency.value"/>
                                            <span>
                                                /
                                                {{action.system.frequency.max}}
                                                {{localize "PF2E.Frequency.per"}}
                                                {{localize (lookup @root.frequencies action.system.frequency.per)}}
                                            </span>
                                        </section>
                                    {{/if}}
                                    <div class="item-controls">
                                            <a class="item-chat chat" data-tooltip="{{localize "PF2E.NPC.SendToChat"}}"><i class="fa-solid fa-fw fa-comment-alt"></i></a>
                                        {{#if @root.options.editable}}
                                            <a class="item-control item-edit" data-tooltip="{{localize "PF2E.EditItemTitle"}}"><i class="fa-solid fa-fw fa-edit"></i></a>
                                            <a class="item-control item-delete" data-tooltip="{{localize "PF2E.DeleteItemTitle"}}"><i class="fa-solid fa-fw fa-trash"></i></a>
                                        {{/if}}
                                    </div>
                                </li>
                            {{/each}}
                        </ol>
                </fieldset>
                {{/if}}

                {{!-- ============== --}}
                {{!--     Tactics    --}}
                {{!-- ============== --}}
                <fieldset>
                    <legend class="compendium-items"><i class="fa-light fa-flag-swallowtail"></i>&nbsp;Tactics</legend>
                        {{#if document.itemTypes.feat}}
                        <ol class="item-list">
                            {{#each document.itemTypes.feat as |feat|}}
                                <li class="item" data-item-id="{{feat._id}}">
                                    <a class="item-icon item-chat">
                                        <i class="imgicon fa-solid fa-fw fa-comment-alt"></i>
                                        <img class="item-icon" src="{{feat.img}}" alt="{{feat.name}}" />
                                    </a>
                                    <label class="item-name">
                                        <h4>{{feat.name}}</h4>
                                    </label>
                                    {{#if feat.system.frequency}}
                                        <section class="item-frequency">
                                            <input type="number" value="{{feat.system.frequency.value}}" data-item-id="{{feat._id}}" data-item-property="system.frequency.value"/>
                                            <span>
                                                /
                                                {{feat.system.frequency.max}}
                                                {{localize "PF2E.Frequency.per"}}
                                                {{localize (lookup @root.frequencies feat.system.frequency.per)}}
                                            </span>
                                        </section>
                                    {{/if}}
                                    <div class="item-controls">
                                            <a class="item-chat chat" data-tooltip="{{localize "PF2E.NPC.SendToChat"}}"><i class="fa-solid fa-fw fa-comment-alt"></i></a>
                                        {{#if @root.options.editable}}
                                            <a class="item-control item-edit" data-tooltip="{{localize "PF2E.EditItemTitle"}}"><i class="fa-solid fa-fw fa-edit"></i></a>
                                            <a class="item-control item-delete" data-tooltip="{{localize "PF2E.DeleteItemTitle"}}"><i class="fa-solid fa-fw fa-trash"></i></a>
                                        {{/if}}
                                    </div>
                                </li>
                            {{/each}}
                        </ol>
                    {{else}}
                    <p class="placeholder"><em>{{localize "PF2E.Warfare.ArmySheet.placeholderTacticsText"}}</em></p>
                    {{/if}}
                </fieldset>

                {{!-- ============== --}}
                {{!--     Effects    --}}
                {{!-- ============== --}}
                {{#if document.itemTypes.effect}}
                    <fieldset>
                        <legend class="compendium-items"><i class="fa-light fa-sparkles"></i>&nbsp;Conditions</legend>
                        <ol class="item-list">
                            {{#each document.itemTypes.effect as |effect|}}
                                <li class="item" data-item-id="{{effect._id}}">
                                    <a class="item-icon item-chat">
                                        <i class="imgicon fa-solid fa-fw fa-comment-alt"></i>
                                        <img class="item-icon" src="{{effect.img}}" alt="{{effect.name}}" />
                                    </a>
                                    <label class="item-name">
                                        <h4>{{effect.name}}</h4>
                                    </label>
                                        {{#if (and (eq effect.type "effect") (eq effect.badge.type "counter"))}}
                                            ({{coalesce effect.badge.label effect.badge.value}})
                                        {{/if}}
                                        {{#if (eq effect.type "condition")}}{{#unless effect.active}}<span> (Inactive)</span>{{/unless}}{{/if}}
                                    <div class="item-controls">
                                        {{#if (and @root.options.editable (not effect.readonly))}}
                                            {{#if (eq effect.badge.type "counter")}}
                                                <a class="item-control increment" data-tooltip="{{localize "PF2E.IncrementEffectTitle"}}"><i class="fa-solid fa-fw fa-plus"></i></a>
                                                <a class="item-control decrement" data-tooltip="{{localize "PF2E.DecrementEffectTitle"}}"><i class="fa-solid fa-fw fa-minus"></i></a>
                                            {{/if}}
                                            <a class="item-chat chat" data-tooltip="{{localize "PF2E.NPC.SendToChat"}}"><i class="fa-solid fa-fw fa-comment-alt"></i></a>
                                            {{#if (eq effect.type "effect")}}
                                                <a class="item-control item-edit" data-tooltip="{{localize "PF2E.EditItemTitle"}}"><i class="fa-solid fa-fw fa-edit"></i></a>
                                            {{/if}}
                                            <a class="item-control item-delete" data-tooltip="{{localize "PF2E.DeleteItemTitle"}}"><i class="fa-solid fa-fw fa-trash"></i></a>
                                        {{else if effect.readonly}}
                                            <a class="item-control info-only" data-tooltip="{{effect.breakdown}}"><i class="fa-solid fa-fw fa-info-circle"></i></a>
                                        {{/if}}
                                    </div>
                                </li>
                            {{/each}}
                        </ol>
                    </fieldset>
                {{/if}}

                {{!-- ============== --}}
                {{!--      Desc      --}}
                {{!-- ============== --}}

                <fieldset>
                    <legend><i class="fa-light fa-pencil"></i>&nbsp;Description</legend>
                    {{editor data.details.description target="system.details.description" button=true owner=owner editable=editable placeholder="A description of this army!"}}
                </fieldset>

        </section>
    </section>
</form>
