<form class="army-sheet" autocomplete="off">

    {{!-- ============== --}}
    {{!--    SIDEBAR     --}}
    {{!-- ============== --}}
    <aside class="army-sidebar">
        {{!-- Portrait --}}
        <div class="image-container">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
            <a class="hover-icon" data-action="show-image"><i class="fas fa-image fa-fw"></i></a>
        </div>

        {{!-- AC --}}
        <div class="sidebar-section ac">
                    <div class="sidebar-label">
                        <i class="fas fa-fw fa-shield-alt"></i>
                        <h4>{{localize "PF2E.ArmorClassShortLabel"}}</h4>
                        <input type="text" data-property="system.attributes.ac.value" value="{{data.attributes.ac.value}}" data-dtype="Number" placeholder="0"/>
                    </div>
                    <input type="text" name="system.attributes.ac.details" value="{{data.attributes.ac.details}}" class="armor-details" placeholder="{{localize "PF2E.NPC.ArmorExtraInfoLabelPlaceholder"}}" />
        </div>

        {{!-- HP --}}
        <div class="sidebar-section hp">
            <div class="sidebar-label">
                    <i class="fas fa-fw fa-heart"></i>
                    <h4>{{localize "PF2E.HitPointsShortLabel"}}</h4>
                    <div class="hit-points">
                            <input type="number" name="system.attributes.hp.value" value="{{data.attributes.hp.value}}" class="current" placeholder="0" />
                            <span class="slash">/</span>
                            <input type="text" class="max adjustable{{#if (lt data.attributes.hp.max 10)}} lt10{{else if (lt data.attributes.hp.max 100)}} lt100{{else}} lt1000{{/if}}" data-property="system.attributes.hp.max" value="{{data.attributes.hp.max}}" data-dtype="Number" placeholder="0"/>
                    </div>
            </div>
            <div class="side-bar-section-content">
                <input class="hp-details" type="text" name="system.attributes.hp.details" value="{{data.attributes.hp.details}}" title="{{data.attributes.hp.details}}" data-dtype="String" placeholder="{{localize "PF2E.NPC.HPExtraInfoLabelPlaceholder"}}"/>
            </div>
        </div>

        {{!-- Scouting --}}
        <div class="sidebar-section scouting">
            <div class="sidebar-label">
                <i class="fas fa-fw fa-eye"></i>
                <h4>Scouting</h4>
                <a class="roll-icon">
                <div>{{numberFormat data.attributes.scouting.totalModifier decimals=0 sign=true}}</div>
                <i class="fas fa-dice-d20"></i>
                </a>                    
            </div>
        </div>

        {{!-- Saves --}}
        <div class="sidebar-section saves">
            <div class="row">
                <div class="half" data-save="{{data.saves.morale}}">
                    <h4>Morale</h4>
                    <a class="roll-icon">
                    <i class="fas fa-dice-d20"></i>
                    <input type="text" value="{{numberFormat data.saves.morale.value decimals=0 sign=true}}" data-property="system.saves.morale.value" data-dtype="Number" placeholder="0" />
                    </a>                        
                </div>
                <div class="half" data-save="{{data.saves.morale}}">
                    <h4>Maneuver</h4>
                    <a class="roll-icon">
                    <i class="fas fa-dice-d20"></i>
                    <input type="text" value="{{numberFormat data.saves.maneuver.value decimals=0 sign=true}}" data-property="system.saves.maneuver.value" data-dtype="Number" placeholder="0" />
                    </a>   
                </div>    
            </div>
            <input type="text" name="system.saves.allSaves.value" value="{{data.saves.allSaves.value}}" title="{{data.saves.allSaves.value}}" placeholder="{{localize "PF2E.NPC.SavesExtraInfoLabelPlaceholder"}}"/>
        </div>
    </aside>

    <section class="army-body">

        {{!-- ============== --}}
        {{!--     Header     --}}
        {{!-- ============== --}}
        <header class="army-sheet-header">
            <div class="name flexrow bottom-separator">
                <input class="name-value" name="name" type="text" value="{{actor.name}}" placeholder="Army Name" spellcheck="false" />
                <label class="level-label">Army</label>
                <input class="level" name="system.details.level.value" type="number" value="{{data.details.level.value}}" placeholder="1" />
            </div>
            <div class="flexrow" style="justify-content: space-between; width: 100%;">
                <div class="flexrow" style="flex: auto;">
                    {{!-- TRAITS --}}
                    <select class="rarity-select trait rarity {{data.traits.rarity}}" data-property="system.traits.rarity.value">
                        {{#select data.traits.rarity}}
                            {{#each rarity as |label key|}}
                                <option value="{{key}}">{{localize label}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                    <select class="alignment-select trait alignment" data-property="system.details.alignment.value">
                        {{#select data.details.alignment.value}}
                            {{#each alignments as |label key|}}
                                <option value="{{key}}">{{localize label}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                    <select class="size-select trait type" data-property="system.traits.type.value">
                        {{#select data.traits.type.value}}
                            {{#each type as |label key|}}
                                <option value="{{key}}">{{localize label}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
            </div>
            <div class="flexrow">
                <input name="system.details.blurb" type="text" value="{{data.details.blurb}}" />
            </div>
        </header>

        {{!-- ============== --}}
        {{!--      Nav       --}}
        {{!-- ============== --}}
        <nav class="sheet-tabs tabs" data-group="primary">
            <a class="item" data-tab="main">Main</a>
            <a class="item" data-tab="inventory">Inventory</a>
            <a class="item" data-tab="effects">Effects</a>
            <a class="item" data-tab="notes">Notes</a>
        </nav>

        {{!-- ============== --}}
        {{!--      Body      --}}
        {{!-- ============== --}}
        <section class="sheet-body">
            {{!-- ============== --}}
            {{!--      Main      --}}
            {{!-- ============== --}}
            <section class="tab main" data-group="primary">
                    <fieldset class="strikes">
                    <legend><i class="fa-light fa-swords"></i>&nbsp;Strikes</legend>
                        <div class="flex">
                            <button class="roll"><i class="fa-light fa-dice-d20"></i></button><span>&nbsp;</span>
                            <input type="text" name="Melee Strike Name" value="Strike Name"/><span>&nbsp;</span>
                            <input type="number" name="strikes.melee" value="{{data.attributes.strikes.melee}}"/><span>&nbsp;</span>
                        </div>
                        <div class="flex">
                            <button class="roll"><i class="fa-light fa-dice-d20"></i></button><span>&nbsp;</span>
                            <input type="text" name="Ranged Strike Name" value="Strike Name"/><span>&nbsp;</span>
                            <input type="number" name="strikes.ranged" value="{{data.attributes.strikes.ranged}}"/><span>&nbsp;</span>
                        </div>
                    </fieldset>
                    <fieldset class="description">
                        <legend><i class="fa-light fa-pencil"></i>&nbsp;Description</legend>
                            {{editor enrichedContent.privateNotes target="system.details.description" button=true editable=editable}}
                    </fieldset>
                    <div class="economy flex">
                        <div>
                            <label for="consumption.value">Consumption:</label>
                            <input type="number" name="consumption.value" value="{{data.attributes.consumption.value}}"/>
                        </div>
                        <div>
                            <label for="recruitmentDC.value">Recruitment DC:</label>
                            <input type="number" name="recruitmentDC.value" value="{{data.attributes.recruitmentDC.value}}"/>
                        </div>
                    </div>
            </section>

            {{!-- ============== --}}
            {{!--      Inv       --}}
            {{!-- ============== --}}
            <section class="tab inventory" data-container-type="actorInventory" data-group="primary">
            </section>   

            {{!-- ============== --}}
            {{!--    Effects     --}}
            {{!-- ============== --}}
            <section class="tab effects" data-group="primary">
            </section>

            {{!-- ============== --}}
            {{!--     Notes      --}}
            {{!-- ============== --}}
            <section class="tab notes" data-group="primary">
            </section>

        </section>
    </section>
</form>