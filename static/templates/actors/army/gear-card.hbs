<div class="pf2e chat-card">
    <header class="card-header flexrow">
        <img src="{{img}}" title="{{name}}" />
        <h3>{{name}}</h3>
        <h3 style="text-align: right">{{level}}</h3>
    </header>

    <div class="tags">
        {{#each traits as |trait|}}
            <span class="tag" data-trait="{{localize trait.name}}" data-description="{{localize trait.description}}">{{localize trait.name}}</span>
        {{/each}}
    </div>

    <div class="card-content">
        {{{description}}}
    </div>

    {{#each ranks as |rank|}}
    <hr/>
    <section>
        <div class="flexrow">
            <h4 style="min-width: 60%"><em>{{rank.name}}</em></h4>
            <span>{{{rank.level}}}</span>
            <span style="text-align: right">{{{rank.price}}}</span>
        </div>
        {{#if rank.desc}}<span>{{rank.desc}}</span>{{/if}}
    </section>
    {{/each}}
    {{#if price}}<hr/><div>{{{price}}}</div>{{/if}}
</div>
