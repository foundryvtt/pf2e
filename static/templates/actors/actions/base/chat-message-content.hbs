<h4 class="action">
    <strong>{{localize name}}</strong>
    {{#if glyph}}
        <span class="pf2-icon larger">{{glyph}}</span>
    {{/if}}
</h4>
<div class="tags" data-tooltip-class="pf2e">
    {{#each traits as |trait|}}
        <span class="tag" data-slug="{{trait.slug}}" data-tooltip="{{trait.description}}">{{localize trait.label}}</span>
    {{/each}}
</div>
{{#if description}}
    <hr>
    {{{localize description}}}
{{/if}}
