<form class="{{cssClass}} crb-style{{#if isProficiencyLocked}} proficiency-lock{{/if}}" autocomplete="off">
    <aside>
        <img class="logo" src="systems/pf2e/assets/pathfinder_logo.webp" height="56" alt="" srcset="" />
        <div class="sidebar" data-tab="sidebar" data-tooltip-class="pf2e">
            {{> "systems/pf2e/templates/actors/character/partials/sidebar.hbs"}}
        </div>
    </aside>

    <!-- HEADER -->
    {{> "systems/pf2e/templates/actors/character/partials/header.hbs"}}

    <!-- SHEET NAVIGATION -->
    <nav class="sheet-navigation" data-group="primary" data-tooltip-class="pf2e" data-tooltip-direction="UP">
        <span class="navigation-title">{{localize "PF2E.TabCharacterLabel"}}</span>
        <a class="item{{#unless tabVisibility.character}} hidden{{/unless}}" data-tab="character" data-tooltip="{{localize "PF2E.TabCharacterLabel"}}">
            <i class="fa-solid fa-address-card"></i>
        </a>

        <a class="item{{#unless tabVisibility.actions}} hidden{{/unless}}" data-tab="actions" data-tooltip="PF2E.TabActionsLabel">
            <span class="action-glyph">1</span>
        </a>

        <a class="item{{#unless tabVisibility.inventory}} hidden{{/unless}}" data-tab="inventory" data-tooltip="PF2E.TabInventoryLabel">
            <i class="fa-solid fa-box-open"></i>
        </a>

        <a class="item{{#unless tabVisibility.spellcasting}} hidden{{/unless}}" data-tab="spellcasting" data-tooltip="PF2E.TabSpellbookLabel">
            <i class="fa-solid fa-wand-magic-sparkles"></i>
        </a>

        <a class="item{{#unless tabVisibility.crafting}} hidden{{/unless}}" data-tab="crafting" data-tooltip="PF2E.TabCraftingLabel">
            <i class="fa-solid fa-hammer"></i>
        </a>

        <a class="item{{#unless tabVisibility.proficiencies}} hidden{{/unless}}" data-tab="proficiencies" data-tooltip="PF2E.TabSkillsLabel">
            <i class="fa-solid fa-hand-paper"></i>
        </a>

        <a class="item{{#unless tabVisibility.feats}} hidden{{/unless}}" data-tab="feats" data-tooltip="PF2E.TabFeatsLabel">
            <i class="fa-solid fa-medal"></i>
        </a>

        <a class="item{{#unless tabVisibility.effects}} hidden{{/unless}}" data-tab="effects" data-tooltip="PF2E.TabEffectsLabel">
            <i class="fa-solid fa-person-rays"></i>
        </a>

        <a class="item{{#unless tabVisibility.biography}} hidden{{/unless}}" data-tab="biography" data-tooltip="PF2E.Biography">
            <i class="fa-solid fa-book-reader"></i>
        </a>

        <a class="item{{#unless tabVisibility.pfs}} hidden{{/unless}}" data-tab="pfs" data-tooltip="PF2E.TabPathfinderSociety">
            {{> "systems/pf2e/templates/actors/character/icons/pfs.hbs"}}
        </a>

        <a class="manage-tabs" data-action="manage-tabs" data-tooltip="PF2E.TabManageTabsLabel">
            <i class="fa-solid fa-fw fa-ellipsis-v"></i>
        </a>
    </nav>

    <!-- BODY -->
    <section class="sheet-body">
        <section class="sheet-content">
            <!-- Character -->
            {{> "systems/pf2e/templates/actors/character/tabs/general.hbs"}}

            <!-- Actions -->
            {{> "systems/pf2e/templates/actors/character/tabs/actions.hbs"}}

            <!-- Crafting -->
            {{> "systems/pf2e/templates/actors/character/tabs/crafting.hbs"}}

            <!-- INVENTORY -->
            {{> "systems/pf2e/templates/actors/character/tabs/inventory.hbs"}}

            <!-- SPELLBOOK -->
            {{> "systems/pf2e/templates/actors/character/tabs/spellcasting.hbs"}}

            <!-- SKILLS -->
            {{> "systems/pf2e/templates/actors/character/tabs/proficiencies.hbs"}}

            <!-- FEATS -->
            {{> "systems/pf2e/templates/actors/character/tabs/feats.hbs"}}

            <!-- Effects -->
            {{> "systems/pf2e/templates/actors/character/tabs/effects.hbs"}}

            <!-- BIOGRAPHY -->
            {{> "systems/pf2e/templates/actors/character/tabs/biography.hbs"}}

            <!-- Pathfinder Society -->
            {{> "systems/pf2e/templates/actors/character/tabs/pfs.hbs"}}
        </section>
    </section>
</form>
