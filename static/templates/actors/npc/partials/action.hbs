<li class="item action flexrow" data-action="{{action._id}}" data-item-name="{{action.name}}" data-item-id="{{action._id}}">
    <h4 class="item-name">
        <a data-action="toggle-summary">{{action.name}}</a>
        {{#if action.glyph}}<span class="action-glyph" data-tooltip="{{actionCostLabel}}">{{action.glyph}}</span>{{/if}}
        {{#if action.system.deathNote}}<i class="fa-solid fa-fw fa-skull"></i>{{/if}}
        {{#if action.hasAura}} <i class="fa-regular fa-circle-dot"></i>{{/if}}
    </h4>

    <div class="controls">
        <a class="chat" data-action="item-to-chat" title="{{localize "PF2E.NPC.SendToChat"}}"><i class="fa-solid fa-fw fa-message"></i></a>
        {{#if isEditable}}
            <a class="item-edit edit" title="{{localize "PF2E.NPC.Edit"}}"><i class="fa-solid fa-fw fa-edit"></i></a>
            <a class="item-delete delete" title="{{localize "PF2E.NPC.Remove"}}"><i class="fa-solid fa-fw fa-trash"></i></a>
        {{/if}}
    </div>

    {{#if action.system.selfEffect}}
        <div class="button-group">
            <button type="button" class="use-action" data-action="use-action">
                <span>{{localize "PF2E.Action.Use"}}</span>
            </button>
        </div>
    {{/if}}

    <div class="item-summary" hidden="hidden"></div>
</li>
