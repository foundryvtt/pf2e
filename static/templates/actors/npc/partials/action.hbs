<li class="item action flexrow" data-action="{{action.id}}" data-item-name="{{action.name}}" data-item-id="{{action.id}}">
    <h4>
        <span class="name">
            <strong><a data-action="toggle-summary">{{action.name}}</a></strong>
            {{#if action.glyph}}<span class="action-glyph" data-tooltip="{{actionCostLabel}}">{{action.glyph}}</span>{{/if}}
            {{#if action.has.aura}} <i class="fa-regular fa-circle-dot"></i>{{/if}}
            {{#if action.has.deathNote}}<i class="fa-solid fa-fw fa-skull"></i>{{/if}}
        </span>

        {{#if action.traits}}
            <span class="traits">
                {{#each action.traits as |trait|}}
                    {{#if @first}}<span class="parenthesis">(</span><ul class="comma-separated">{{/if~}}
                    <li{{#if trait.description}} data-tooltip="{{trait.description}}"{{/if}}>{{trait.label}}</li>
                    {{~#if @last}}</ul><span class="parenthesis">)</span>{{/if}}
                {{/each}}
            </span>
        {{/if}}
    </h4>

    <div class="controls">
        <a class="chat" data-action="item-to-chat" data-tooltip="PF2E.NPC.SendToChat"><i class="fa-solid fa-fw fa-message"></i></a>
        {{#if @root.editable}}
            <a data-action="edit-item" data-tooltip="CONTROLS.CommonEdit"><i class="fa-solid fa-fw fa-edit"></i></a>
            <a data-action="delete-item" data-tooltip="Delete"><i class="fa-solid fa-fw fa-trash"></i></a>
        {{/if}}
    </div>
    {{#if action.usable}}
        <div class="button-group">
            <button type="button" class="use-action" data-action="use-action">
                <span>{{localize "PF2E.Action.Use"}}</span>
            </button>
            {{#if action.frequency}}
                <div class="frequency">
                    <input type="number" value="{{action.frequency.value}}" data-item-id="{{action.id}}" data-item-property="system.frequency.value" />
                        <span>
                        /
                        {{action.frequency.max}}
                        {{localize "PF2E.Frequency.per"}}
                        {{localize (lookup @root.frequencies action.frequency.per)}}
                        </span>
                    </div>
            {{/if}}
        </div>
    {{/if}}

    <div class="item-summary" hidden></div>
</li>
