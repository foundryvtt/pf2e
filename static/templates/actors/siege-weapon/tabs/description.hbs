<div class="tab biography" data-group="primary" data-tab="description">
    <section class="biography-details">
        <div class="biography-content">
            <label class="details-label">{{localize "PF2E.siegeWeapon.DescriptionHeading"}}</label>
            <span class="biography-content" title="{{localize "PF2E.siegeWeapon.DescriptionHeading"}}">
                {{editor enrichedContent.description target="system.details.description" button=true owner=owner editable=editable}}
            </span>
        </div>
    </section>
    <section class="source-details">
	<div class="biography-content">
	    <label class="details-label">{{localize "PF2E.Source.Label"}}</label>
            <input name="system.details.source.value" type="text" value="{{data.details.source.value}}" placeholder="{{localize "PF2E.Source.SourcePlaceholder"}}" />
	</div>
    </section>
</div>
