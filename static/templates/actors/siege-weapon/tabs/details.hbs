<div class="tab details character" data-group="primary" data-tab="details">
    <div class="details-content">
        <div class="bio-item trait-size">
            <section class="siege-weapon-details">
                <div class="frame">
                    <img class="actor-image" src="{{actor.img}}" title="{{actor.name}}" height="auto" width="100%" data-edit="img" />
                </div>
                <div class="detail-sheet">
                    <div class="detail-small row-nr-1">
		        <div class="inputSplit" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionPrice"}}">
                        <label class="details-label" for="{{options.id}}-siege-weapon-price">{{localize "PF2E.PriceLabel"}}</label>
                        <input class="details-input" id="{{options.id}}-siege-weapon-price" name="system.details.price" type="number" value="{{data.details.price}}" placeholder="0" />
			</div>
                        <div class="inputSplit">
                        <label class="details-label" for="{{options.id}}-siege-weapon-rarity">{{localize "PF2E.Rarity"}}</label>
                        <select id="{{options.id}}-siege-weapon-rarity" name="system.traits.rarity" data-dtype="String">
                            {{#select data.traits.rarity}}
                                {{#each actorRarities as |label key|}}
                                    <option value="{{key}}">{{localize label}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                        </div>
                    </div>

                    <div class="detail-small row-nr-2" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionSpace"}}">
                        <div class="inputSplit">
                            <label class="details-label" for="{{options.id}}-siege-weapon-space-long">{{localize "PF2E.siegeWeapon.SpaceLongLabel"}}</label>
                            <input class="details-input" id="{{options.id}}-siege-weapon-space-long" name="system.details.space.long" type="number" min="5" step="5" value="{{data.details.space.long}}" placeholder="2" />
                        </div>
                        <div class="inputSplit">
                            <label class="details-label" for="{{options.id}}-siege-weapon-space-wide">{{localize "PF2E.siegeWeapon.SpaceWideLabel"}}</label>
                            <input class="details-input" id="{{options.id}}-siege-weapon-space-wide" name="system.details.space.wide" type="number" min="5" step="5" value="{{data.details.space.wide}}" placeholder="2" />
                        </div>
                        <div class="inputSplit">
                            <label class="details-label" for="{{options.id}}-siege-weapon-space-high">{{localize "PF2E.siegeWeapon.SpaceHighLabel"}}</label>
                            <input class="details-input" id="{{options.id}}-siege-weapon-space-high" name="system.details.space.high" type="number" min="1" step="1" value="{{data.details.space.high}}" placeholder="1" />
                        </div>
                    <div class="inputSplit">
                        <label class="details-label" for="{{options.id}}-siege-weapon-size-value">{{localize "PF2E.SizeLabel"}}</label>
                        <select id="{{options.id}}-siege-weapon-size-value" name="system.traits.size.value"
                            data-dtype="String">
                            {{#select data.traits.size.value}}
                                {{#each actorSizes as |label size|}}
                                    <option value="{{size}}">{{localize label}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </div>
                    </div>

                    <div class="detail-small row-nr-3">
		    <div title="{{localize "PF2E.siegeWeapon.PropertyDescriptionCrewMin"}}">
		    	<label class="details-label" for="{{options.id}}-siege-weapon-crew-min">{{localize "PF2E.siegeWeapon.CrewMinLabel"}}</label>
		    	<input class="details-input" id="{{options.id}}-siege-weapon-crew-min" name="system.details.crew.min" type="text" value="{{data.details.crew.min}}" />
		    </div>
		    <div title="{{localize "PF2E.siegeWeapon.PropertyDescriptionCrewMax"}}">
		    	<label class="details-label" for="{{options.id}}-siege-weapon-crew-max">{{localize "PF2E.siegeWeapon.CrewMaxLabel"}}</label>
		    	<input class="details-input" id="{{options.id}}-siege-weapon-crew-max" name="system.details.crew.max" type="text" value="{{data.details.crew.max}}" />
		    </div>
		    <div title="{{localize "PF2E.siegeWeapon.PropertyDescriptionProficiency"}}">
		    	<label class="details-label" for="{{options.id}}-siege-weapon-proficiency">{{localize "PF2E.siegeWeapon.ProficiencyLabel"}}</label>
		    	<select id="{{options.id}}-siege-weapon-proficiency" name="system.details.proficiency" data-dtype="String">
			{{#select data.details.proficiency}}
                            {{#each proficiencyTypes as |label key|}}
                                <option value="{{key}}">{{localize label}}</option>
                            {{/each}}
                        {{/select}}
                        </select>
                    </div>
		    </div>
                </div>
            </section>
            <section class="siege-weapon-properties">
		{{#if isPortable}}
                <div class="flexitem-5" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionUsage"}}">
                    <label class="details-label" for="{{options.id}}-siege-weapon-usage">{{localize "PF2E.Usage"}}</label>
                    <input class="details-input" id="{{options.id}}-siege-weapon-usage" name="system.details.usage" type="text" value="{{data.details.usage}}" />
                </div>
                <div class="flexitem-5" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionBulk"}}">
                    <label class="details-label" for="{{options.id}}-siege-weapon-bulk">{{localize "PF2E.BulkShortLabel"}}</label>
                    <input class="details-input" id="{{options.id}}-siege-weapon-bulk" name="system.details.bulk" type="number" value="{{data.details.bulk}}" placeholder="0" />
                </div>
		{{/if}}
                <div class="detailsInput flexitem-2" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionSpeed"}}">
                    <label class="details-label" for="{{options.id}}-siege-weapon-speed">{{localize "PF2E.Speed"}}</label>
                    <input class="details-input" id="{{options.id}}-siege-weapon-speed" name="system.details.speed" type="text" value="{{data.details.speed}}" placeholder="0" />
                </div>
                <div class="detailsInput flexitem-2" title="{{localize "PF2E.siegeWeapon.PropertyDescriptionPropulsion"}}">
                    <label class="details-label" for="{{options.id}}-siege-weapon-propulsion">{{localize "PF2E.siegeWeapon.PropulsionLabel"}}</label>
                    <select id="{{options.id}}-siege-weapon-propulsion" name="system.details.propulsion" data-dtype="String">
                        {{#select data.details.propulsion}}
                            {{#each propulsionMethods as |label key|}}
                                <option value="{{key}}">{{localize label}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <div class="detailsInput flexitem-1">
                    <span class="details-label">{{localize "PF2E.Traits"}}</span>
                    <ul class="tags">
                        {{#each system.traits.traits.selected as |v k|}}
                            <li class="tag tag_alt {{k}}">{{localize v}}</li>
                        {{/each}}
                        <li class="tag tag_secondary edit-btn">
                            {{#if editable}}
                                <a class="crb-tag-selector" data-tag-selector="basic" data-config-types="siegeWeaponTraits" data-property="system.traits">
                                    {{> "systems/pf2e/templates/actors/character/icons/plus.hbs"}}
                                </a>
                            {{/if}}
                        </li>
                    </ul>
                </div>

                <div class="flexitem-5" style="margin-bottom: -4px">
                    <label class="details-label" for="{{options.id}}-siege-weapon-actions">{{localize "PF2E.ActionActionsLabel"}}</label>
                </div>
                {{#if editable}}
		    <div class="flexitem-1" style="margin-bottom: -4px">
                        <div class="item-controls">
                            <a class="item-control item-create" title="{{localize "PF2E.CreateActionTitle"}}" data-type="action" data-action-type="action"><i class="fas fa-fw fa-plus"></i></a>
                        </div>
                    </div>
                {{/if}}
                <div class="flexitem-full">
                    <ol class="actions-list item-list">
                        {{#each actor.actions.action.actions as |action aid|}}
                            <li class="item action flexrow" data-item-id="{{action._id}}" draggable="true">
                                <div class="action-header">
                                    <div class="action-name rollable">
                                        <h4><a>{{action.name}} {{{actionGlyph action.system.actions.value}}}</a></h4>
                                    </div>
                                    <div class="item-controls">
                                        {{#if ../editable}}
                                            <a class="item-chat chat" title="{{localize "PF2E.NPC.SendToChat"}}"><i class="fas fa-comment-alt"></i></a>
                                            <a class="item-control item-edit" title="{{localize "PF2E.EditItemTitle"}}"><i class="fas fa-edit"></i></a>
                                            <a class="item-control item-delete" title="{{localize "PF2E.DeleteItemTitle"}}"><i class="fas fa-trash"></i></a>
                                        {{/if}}
                                    </div>
                                </div>
                            </li>
                        {{/each}}
			        </ol>
		        </div>
            </section>
        </div>
    </div>
</div>
