<div class="content">
    <section class="feat-section" data-category-id="{{section.id}}">
        <h3 class="header">
            {{localize "PF2E.Kingmaker.Kingdom.BuildHeader"}}
            <button type="button" data-action="builder">
                <i class="fa-solid fa-fw fa-crown"></i>{{localize "PF2E.Kingmaker.KingdomBuilder.Builder"}}
            </button>
        </h3>
        <ol class="directory-list">
            {{#if kingdom.build.charter}}
                {{> kingdomCHG letter="C" item=kingdom.build.charter}}
            {{/if}}
            {{#if kingdom.build.heartland}}
                {{> kingdomCHG letter="H" item=kingdom.build.heartland}}
            {{/if}}
            {{#if kingdom.build.government}}
                {{> kingdomCHG letter="G" item=kingdom.build.government}}
            {{/if}}
        </ol>
    </section>

    {{#each feats as |section|}}
        <section class="feat-section" data-category-id="{{section.id}}">
            <h3 class="header">
                {{localize section.label}}
                {{#if section.featFilter}}
                    <button
                        type="button"
                        class="feat-browse"
                        data-type="feat"
                        data-filter="{{section.featFilter}},conjunction-or"
                    >
                        <i class="fas fa-fw fa-search"></i>{{localize "PF2E.BrowseLabel"}}
                    </button>
                {{/if}}
            </h3>
            <ol class="actions-list directory-list">
                {{#each section.feats as |featSlot|}}
                    {{> "systems/pf2e/templates/actors/character/partials/feat-slot.hbs" featSlot=featSlot featFilter=section.featFilter}}
                {{/each}}
            </ol>
        </section>
    {{/each}}
</div>

{{#*inline "kingdomCHG"}}
    <li class="item feat-item expandable" data-item-summary-id="kingdom-{{letter}}">
        <div class="item-name">
            <div class="feat-slot-title">{{letter}}</div>
            <div class="item-image framed">
                <img class="item-icon" src="{{item.img}}" alt="{{item.name}}">
                <i class="fa-solid fa-message"></i>
            </div>
            <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
            {{#if @root.editable}}
                <a class="item-control item-edit" data-action="builder" title="{{localize "PF2E.EditItemTitle"}}"><i class="fas fa-fw fa-edit"></i></a>
            {{/if}}
        </div>
        <div class="item-summary">
            {{{item.description}}}
        </div>
    </li>
{{/inline}}
