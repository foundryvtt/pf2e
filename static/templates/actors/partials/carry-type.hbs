{{#if item.isAttachable}}
    <li>
        <a data-carry-type="attached"><i class="fa-solid fa-fw fa-paperclip"></i>{{localize "PF2E.CarryType.attached"}}</a>
    </li>
{{/if}}
<li>
    <a
        {{#if (and (eq item.system.equipped.carryType "held") (eq item.system.equipped.handsHeld 1))}}class="selected"{{/if}}
        data-carry-type="held"
        data-hands-held="1"
    ><i class="fa-solid fa-fw fa-hand-rock"></i>{{localize "PF2E.CarryType.held1"}}</a>
</li>
<li>
    <a
        {{#if (and (eq item.system.equipped.carryType "held") (eq item.system.equipped.handsHeld 2))}}class="selected"{{/if}}
        data-carry-type="held"
        data-hands-held="2"
    ><i class="fa-solid fa-fw fa-hand-rock"></i>{{localize "PF2E.CarryType.held2"}}</a>
</li>
{{#if (and (eq item.system.usage.type "worn") item.system.usage.where)}}
    <li>
        <a
            {{#if item.system.equipped.inSlot}}class="selected"{{/if}}
            data-carry-type="worn" data-in-slot
        ><i class="fa-solid fa-fw fa-tshirt"></i>{{localize "PF2E.Item.Physical.Usage.WornParenthetical" where=(localize (concat "PF2E.Item.Physical.Usage.WornSlot." item.system.usage.where))}}</a>
    </li>
{{/if}}
<li>
    <a
        {{#if (and (eq item.system.equipped.carryType "worn") (or (not item.system.usage.where) (eq item.system.equipped.inSlot false)))}}class="selected"{{/if}}
        data-carry-type="worn"><i class="fa-solid fa-fw fa-tshirt"></i>{{localize "PF2E.CarryType.worn"}}</a>
</li>
{{#if hasStowingContainers}}
    <li>
        <a
            {{#if (eq item.system.equipped.carryType "stowed")}}class="selected"{{/if}}
            data-carry-type="stowed"><i class="fa-solid fa-fw fa-box"></i>{{localize "PF2E.CarryType.stowed"}}</a>
    </li>
{{/if}}
<li>
    <a
        {{#if (eq item.system.equipped.carryType "dropped")}}class="selected"{{/if}}
        data-carry-type="dropped"><i class="fa-solid fa-fw fa-grip-lines"></i>{{localize "PF2E.CarryType.dropped"}}</a>
</li>
