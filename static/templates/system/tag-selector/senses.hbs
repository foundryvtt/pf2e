<form autocomplete="off">
    <table class="pf2e" data-tooltip-class="pf2e">
        <thead>
            <tr>
                <th>{{localize "PF2E.Actor.Creature.Sense.Label"}}</th>
                <th>{{localize "PF2E.Actor.Creature.Sense.Acuity.Label"}}</th>
                <th>{{localize "PF2E.Actor.Creature.Sense.RangeLabel"}}</th>
            </tr>
        </thead>
        <tbody>
            {{#each choices as |choice key|}}
                <tr class="sense">
                    <td>
                        <div class="label-checkbox-source">
                            <input
                                type="checkbox"
                                id="{{@root.options.id}}-{{key}}"
                                name="{{key}}"
                                {{checked choice.selected}}
                                {{disabled choice.source}}
                            />
                            <label for="{{@root.options.id}}-{{key}}">{{choice.label}}</label>
                            {{#if choice.source}}<i class="fa-solid fa-info-circle" data-tooltip="{{choice.source}}"></i>{{/if}}
                        </div>
                    </td>
                    <td>
                        <select name="{{key}}" {{disabled (not choice.canSetAcuity)}}>
                            {{#select choice.acuity}}
                                {{#each ../senseAcuities as |label acuity|}}
                                    <option value="{{acuity}}">{{localize label}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </td>
                    <td>
                        <input
                            type="number"
                            id="input_value_{{key}}"
                            name="{{key}}"
                            value="{{choice.range}}"
                            {{#if choice.canSetRange}}
                                min="5"
                                max="1000"
                                step="5"
                            {{else}}
                                disabled
                            {{/if}}
                        />
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <button type="submit" class="trait-footer">
        <i class="fa-regular fa-save"></i>{{localize "DOCUMENT.Update" type=(localize documentType)}}
    </button>
</form>
