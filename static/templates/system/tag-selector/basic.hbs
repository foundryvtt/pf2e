<form {{#if flat}}data-flat="{{flat}}"{{/if}} autocapitalize="off">
    <header class="trait-header flexrow">
        <div class="header-search">
            <i class="fa-solid fa-search"></i>
            <input type="search" value="{{searchString}}" placeholder="{{localize "FILES.Search"}}" />
        </div>
    </header>
    <ol class="trait-list{{#if allowCustom}} has-custom{{/if}}">
        {{#each choices as |choice key|}}
        <li class="trait-item">
            <label class="trait-selection-label">
                <input type="checkbox" name="{{key}}" {{checked choice.selected}} {{disabled choice.disabled}} />
                <span class="trait-label">{{choice.label}}</span>
            </label>
        </li>
        {{/each}}
    </ol>
    {{#if allowCustom}}
    <div class="form-group-stacked trait-footer">
        <label>{{localize "PF2E.SpecialLabel"}}:</label>
        <input type="text" name="custom" value="{{custom}}" />
    </div>
    {{/if}}

    <button type="submit" class="trait-footer">
        <i class="fa-regular fa-save"></i>{{localize "DOCUMENT.Update" type=(localize documentType)}}
    </button>
</form>
