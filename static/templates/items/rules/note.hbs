<div class="form-group">
    <label class="short">{{fields.title.label}}</label>
    <div class="form-fields">
        <input type="text" name="system.rules.{{index}}.title" value="{{rule.title}}" />
        <label>
            {{fields.hidden.label}}
            <input type="checkbox" class="hidden-value" {{checked (or (eq rule.visibility "owner") (eq rule.visibility "gm"))}}>
        </label>
    </div>
</div>

<div class="form-group">
    <label for="selector" class="short">{{fields.selector.label}}</label>
    <div class="attached-input">
        <button type="button" class="attachment" data-action="toggle-selector">
            {{#if selectorIsArray}}Multiple{{else}}Single{{/if}}
        </button>
        {{#if selectorIsArray}}
            <tagify-tags class="pf2e-tagify selector-list" name="system.rules.{{index}}.selector" value="{{json rule.selector}}" />
        {{else}}
            <input type="text" name="system.rules.{{index}}.selector" value="{{rule.selector}}" />
        {{/if}}
    </div>
</div>

<textarea name="system.rules.{{index}}.text" spellcheck="false" placeholder="{{fields.text.label}}">{{rule.text}}</textarea>

<div class="form-group">
    <label class="short">{{fields.outcome.label}}</label>
    <tagify-tags class="pf2e-tagify outcomes" name="system.rules.{{index}}.outcome" value="{{json rule.outcome}}" />
</div>

<div class="form-group">
    <label class="short">{{fields.predicate.label}}</label>
    <input type="text" name="system.rules.{{index}}.predicate" value="{{json rule.predicate}}" />
</div>
