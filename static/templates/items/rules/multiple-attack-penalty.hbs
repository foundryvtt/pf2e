<div class="form-group">
    <label for="{{item.uuid}}-{{index}}-label" class="short">{{localize fields.label.label}}</label>
    <div class="attached-input">
        <input type="text" name="system.rules.{{index}}.label" id="{{item.uuid}}-{{index}}-label" value="{{rule.label}}" placeholder="{{item.name}}" />
    </div>
</div>

<div class="form-group">
    <label for="{{item.uuid}}-{{index}}-selector" class="short">{{localize fields.selector.label}}</label>
    <div class="attached-input">
        <input type="text" name="system.rules.{{index}}.selector" id="{{item.uuid}}-{{index}}-selector" value="{{rule.selector}}" />
    </div>
</div>

<div class="form-group">
    <label for="{{item.uuid}}-{{index}}-value" class="short">{{localize fields.value.label}}</label>
    {{{form.resolvableValue "value"}}}
    {{{form.resolvableAddBracket "value"}}}
</div>

