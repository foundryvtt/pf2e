<div class="pf2e chat-card item-card" data-actor-id="{{actor.id}}" data-item-id="{{item.id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" alt="{{item.name}}" />
        <h3>{{item.name}}</h3>
    </header>

    <div class="card-content">
        {{{data.description.value}}}
    </div>

    {{#if actor}}
        <section class="card-buttons">
            <button type="button" data-action="affliction-save" data-save="{{data.save.type}}" data-dc="{{data.save.value}}">{{localize "PF2E.SaveDCLabel" dc=data.save.value type=(lookup (lookup actor.saves data.save.type) "label") }}</button>
        </section>
    {{/if}}
</div>
