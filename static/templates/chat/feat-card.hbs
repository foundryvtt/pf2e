<div class="pf2e chat-card item-card" data-actor-id="{{actor.id}}" data-item-id="{{item.id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" alt="{{item.name}}" />
        <h3>
            {{item.name}}
            {{{actionGlyph item.system.actions.value}}}
        </h3>
    </header>

    <div class="tags" data-tooltip-class="pf2e">
        {{#unless (eq item.rarity "common")}}
            <span
                class="tag rarity {{item.rarity}}"
                data-trait="{{item.rarity}}"
                data-tooltip="{{data.rarity.description}}"
            >{{localize data.rarity.label}}</span>
        {{/unless}}
        {{#each data.traits as |trait|}}
            <span class="tag" data-trait="{{trait.name}}" data-tooltip="{{trait.description}}">{{localize trait.label}}</span>
        {{/each}}
    </div>
    <div class="card-content">
        {{{item.description}}}
    </div>

    <footer class="card-footer">
        {{#each data.properties}}
            <span>{{localize this}}</span>
        {{/each}}
    </footer>
</div>
