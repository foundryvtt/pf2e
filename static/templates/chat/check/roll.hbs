<div class="dice-roll {{type}}{{#if action}} {{action}}{{/if}}">
    {{#if flavor~}}
        <div class="dice-flavor">
            {{flavor}}
        </div>
    {{~/if}}
    <div class="dice-result">
        <div class="dice-formula">{{formula}}</div>
        {{{tooltip}}}
        <h4 class="dice-total">{{total}}</h4>
    </div>
</div>
{{#if (and action damaging canRollDamage)}}
    <div class="message-buttons" data-identifier="{{identifier}}">
        <button type="button" class="success" data-action="{{action}}-damage" data-outcome="success">
            {{localize "PF2E.DamageLabel"}}
            {{#if (eq degree 2)}}<i class="fa-duotone fa-bullseye-pointer fa-flip-horizontal fa-fw cue"></i>{{/if}}
        </button>
        <button type="button" class="critical-success" data-action="{{action}}-damage" data-outcome="critical-success">
            {{localize "PF2E.CriticalDamageLabel"}}
            {{#if (eq degree 3)}}<i class="fa-duotone fa-bullseye-pointer fa-flip-horizontal fa-fw cue"></i>{{/if}}
        </button>
    </div>
{{/if}}
