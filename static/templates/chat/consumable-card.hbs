<div class="pf2e chat-card item-card" data-actor-id="{{actor.id}}" data-item-id="{{item.id}}" {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" alt="{{item.name}}" />
        <h3>{{item.name}}</h3>
    </header>

    <div class="tags" data-tooltip-class="pf2e">
        {{#if (and item.isIdentified (ne data.rarity.slug "common"))}}
            <span
                class="tag rarity {{data.rarity.slug}}"
                data-trait="{{data.rarity.slug}}"
                data-tooltip="{{data.rarity.description}}"
            >{{localize data.rarity.label}}</span>
        {{/if}}
        {{#each data.traits as |trait|}}
            {{#unless trait.mystified}}
                <span class="tag" data-trait="{{trait.name}}" data-tooltip="{{trait.description}}">{{localize trait.label}}</span>
            {{/unless}}
        {{/each}}
        {{#each data.properties as |property|}}
            <span class="tag tag_alt">{{localize property}}</span>
        {{/each}}
    </div>

    <hr />

    {{#if item.description}}
        <div class="card-content">
            {{{item.description}}}
        </div>
    {{/if}}

    <div class="card-buttons">
        {{#if (and data.isUsable (not item.isAmmo))}}
            {{#if (gt item.system.uses.value 0)}}
                <button type="button" data-action="consume">{{localize "PF2E.Item.Consumable.Uses.Use"}}</button>
            {{else}}
                <button type="button" disabled="disabled">{{localize "PF2E.Item.Consumable.Uses.None"}}</button>
            {{/if}}
        {{/if}}
    </div>

    <footer class="card-footer">
        {{#if item.isIdentified}}
            <span>{{localize "PF2E.Item.Physical.LevelLabel" level=item.level}}</span>
            <span>{{localize "PF2E.Item.Physical.PriceLabel" price=(coinLabel item.price)}}</span>
        {{/if}}
    </footer>
</div>
