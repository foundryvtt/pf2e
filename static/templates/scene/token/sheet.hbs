<form class="flexcol {{cssClasses}}" autocomplete="off">

    <!-- Tabs -->
    <nav class="sheet-tabs tabs" data-group="main" aria-role="{{localize "SHEETS.FormNavLabel"}}">
        <a class="item" data-tab="character"><i class="fa-solid fa-user"></i> {{localize "TOKEN.HeaderIdentity"}}</a>
        <a class="item" data-tab="appearance"><i class="fa-solid fa-expand"></i> {{localize "TOKEN.HeaderAppearance"}}</a>
        <a class="item" data-tab="vision"><i class="fa-solid fa-eye"></i> {{localize "TOKEN.HeaderVision"}}</a>
        <a class="item" data-tab="light"><i class="fa-solid fa-lightbulb"></i> {{localize "TOKEN.HeaderLight"}}</a>
        <a class="item" data-tab="resources"><i class="fa-solid fa-heart"></i> {{localize "TOKEN.HeaderResources"}}</a>
    </nav>

    <!-- Identity -->
    {{> "systems/pf2e/templates/scene/token/partials/identity.hbs"}}

    <!-- Appearance -->
    {{> "systems/pf2e/templates/scene/token/partials/appearance.hbs"}}

    <!-- Vision -->
    {{> "templates/scene/parts/token-vision.html"}}

    <!-- Light -->
    {{> "systems/pf2e/templates/scene/token/partials/lighting.hbs"}}

    <!-- Resource Bars -->
    {{> "templates/scene/parts/token-resources.html"}}

    <!-- Footer -->
    <footer class="sheet-footer flexrow">
        {{#if isPrototype}}
            <button type="button" class="assign-token"><i class="fa-solid fa-user"></i> {{localize "TOKEN.Assign"}}</button>
        {{/if}}
        <button type="submit"><i class="fa-regular fa-save"></i> {{localize "TOKEN.Update"}}</button>
    </footer>
</form>
