            "remaster": true,
            "title": "Pathfinder Player Core"
        },
        "rules": [
            {
                "key": "ActiveEffectLike",
                "mode": "upgrade",
                "path": "system.proficiencies.defenses.heavy.rank",
                "priority": 41,
                "value": "ternary(gte(@actor.level,13),2*max(min(1,@actor.system.proficiencies.defenses.light.rank,@actor.system.proficiencies.defenses.medium.rank)),max(min(1,@actor.system.proficiencies.defenses.light.rank,@actor.system.proficiencies.defenses.medium.rank)))"
