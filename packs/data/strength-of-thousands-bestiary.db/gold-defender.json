        {
            "_id": "u3e500e7v3a6z9ca",
            "img": "systems/pf2e/icons/actions/Passive.webp",
            "name": "Malleable Shape",
            "sort": 500000,
            "system": {
                "actionCategory": {
                    "value": "defensive"
                },
